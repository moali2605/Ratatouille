<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pick_day_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="50dp"
    app:cardCornerRadius="50dp"
    >



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="25dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/choose_a_day"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnSaturdayDi"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:text="@string/saturday"
                app:layout_constraintEnd_toEndOf="@+id/textView10"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <Button
                android:id="@+id/btnSundayDi"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/sunday"
                app:layout_constraintEnd_toEndOf="@+id/btnSaturdayDi"
                app:layout_constraintStart_toStartOf="@+id/btnSaturdayDi"
                app:layout_constraintTop_toBottomOf="@id/btnSaturdayDi" />

            <Button
                android:id="@+id/btnMondayDi"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/monday"
                app:layout_constraintEnd_toEndOf="@+id/btnSundayDi"
                app:layout_constraintStart_toStartOf="@+id/btnSundayDi"
                app:layout_constraintTop_toBottomOf="@id/btnSundayDi" />

            <Button
                android:id="@+id/btnTuesdayDi"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/tuesday"
                app:layout_constraintEnd_toEndOf="@+id/btnMondayDi"
                app:layout_constraintStart_toStartOf="@+id/btnMondayDi"
                app:layout_constraintTop_toBottomOf="@id/btnMondayDi" />

            <Button
                android:id="@+id/btnWednesdayDi"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/wednesday"
                app:layout_constraintEnd_toEndOf="@+id/btnTuesdayDi"
                app:layout_constraintStart_toStartOf="@+id/btnTuesdayDi"
                app:layout_constraintTop_toBottomOf="@id/btnTuesdayDi" />

            <Button
                android:id="@+id/btnThursdayDi"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/thursday"
                app:layout_constraintEnd_toEndOf="@+id/btnWednesdayDi"
                app:layout_constraintStart_toStartOf="@+id/btnWednesdayDi"
                app:layout_constraintTop_toBottomOf="@id/btnWednesdayDi" />

            <Button
                android:id="@+id/btnFridayDi"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/friday"
                app:layout_constraintEnd_toEndOf="@+id/btnThursdayDi"
                app:layout_constraintStart_toStartOf="@+id/btnThursdayDi"
                app:layout_constraintTop_toBottomOf="@id/btnThursdayDi" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
