<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DailyMeal.DailyMealFragment">

    <Button
        android:id="@+id/btnSaturdayDi"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="64dp"
        android:text="@string/sunday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSundayDi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#8B6AD56A"
        android:text="@string/sunday"
        app:layout_constraintEnd_toEndOf="@+id/btnSaturdayDi"
        app:layout_constraintStart_toStartOf="@+id/btnSaturdayDi"
        app:layout_constraintTop_toBottomOf="@+id/btnSaturdayDi" />

    <Button
        android:id="@+id/btnMondayDi"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/monday"
        app:layout_constraintEnd_toEndOf="@+id/btnSundayDi"
        app:layout_constraintStart_toStartOf="@+id/btnSundayDi"
        app:layout_constraintTop_toBottomOf="@+id/btnSundayDi" />

    <Button
        android:id="@+id/btnTuesdayDi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#8B6AD56A"
        android:text="@string/tuesday"
        app:layout_constraintEnd_toEndOf="@+id/btnWednesdayDi"
        app:layout_constraintStart_toStartOf="@+id/btnWednesdayDi"
        app:layout_constraintTop_toBottomOf="@+id/btnWednesdayDi" />

    <Button
        android:id="@+id/btnWednesdayDi"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/wednesday"
        app:layout_constraintEnd_toEndOf="@+id/btnThursdayDi"
        app:layout_constraintStart_toStartOf="@+id/btnThursdayDi"
        app:layout_constraintTop_toBottomOf="@+id/btnThursdayDi" />

    <Button
        android:id="@+id/btnThursdayDi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#8B6AD56A"
        android:text="@string/thursday"
        app:layout_constraintEnd_toEndOf="@+id/btnMondayDi"
        app:layout_constraintStart_toStartOf="@+id/btnMondayDi"
        app:layout_constraintTop_toBottomOf="@+id/btnMondayDi" />

    <Button
        android:id="@+id/btnFridayDi"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/friday"
        app:layout_constraintEnd_toEndOf="@+id/btnTuesdayDi"
        app:layout_constraintStart_toStartOf="@+id/btnTuesdayDi"
        app:layout_constraintTop_toBottomOf="@+id/btnTuesdayDi" />


</androidx.constraintlayout.widget.ConstraintLayout>